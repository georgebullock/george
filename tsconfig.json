    "resolveJsonModule": true,
    "lib": ["es6"],
    "allowJs": true,
    "rootDir": "./",
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["index.ts"],
  "exclude": ["index.spec.ts"]
}
